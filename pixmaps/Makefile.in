@SET_MAKE@

# no csh please
SHELL = /bin/sh

##############################################################################
# location of required programms
prefix = @prefix@
MKDIR = @MKDIR@
RM   = @RM@
LS   = @LS@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

srcdir = @srcdir@
datadir= @datadir@/vm
datarootdir= @datarootdir@

SYMLINKS = @SYMLINKS@
LINKPATH = @LINKPATH@

##############################################################################

all:

Makefile: @srcdir@/Makefile.in
	cd @srcdir@/..; ./config.status

install: install-pkg

install-pkg: 
	$(MKDIR) -p "$(datadir)/mime"
	for i in `$(LS) *.xpm` ; do                                    \
	    echo "Installing $$i in '$(datadir)'" ;                    \
	    $(INSTALL_DATA) $$i "$(datadir)" ;                         \
	done ;
	for i in `ls mime/*.xpm` ; do                                  \
	    echo "Installing $$i in '$(datadir)'" ;                    \
	    $(INSTALL_DATA) $$i "$(datadir)/mime" ;                    \
	done ;                                                         
	@echo VM pixmaps successfully installed\!

##############################################################################
clean:
	-$(RM) -f *~

distclean: clean
	-$(RM) -f Makefile

